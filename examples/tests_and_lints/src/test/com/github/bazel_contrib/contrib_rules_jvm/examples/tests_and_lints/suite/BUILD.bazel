load("@contrib_rules_jvm//java:defs.bzl", "checkstyle_test", "java_test_suite")
load("@rules_jvm_external//:defs.bzl", "artifact")

java_test_suite(
    name = "ExampleSuite",
    srcs = glob(["*.java"]),
    jvm_flags = ["-javaagent=$(location @maven//:org_jmockit_jmockit)"],
    runner = "junit5",
    runtime_deps = [
        artifact("org.junit.jupiter:junit-jupiter-engine"),
    ],
    deps = [
        artifact("org.jmockit:jmockit:1.38"),
        artifact("org.junit.jupiter:junit-jupiter-api"),
        artifact("org.junit.platform:junit-platform-launcher"),
        artifact("org.junit.platform:junit-platform-reporting"),
    ],
)

checkstyle_test(
    name = "example_test_checkstyle",
    srcs = ["ExampleTest.java"],
)
